page {
  padding-bottom: 90rpx;
}
.address .address-btn {
  padding: 20rpx;
}
.address .address-btn button {
  width: 60%;
}
.address .address-wrap {
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: space-between;
}
.address .address-wrap .user-info .user-name {
  font-size: 36rpx;
}
view.cart view.title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
view.cart view.cart-content {
  border: 1px solid red;
}
view.cart view.cart-content view.goods-item {
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}
view.cart view.cart-content view.goods-item view.goods-checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.cart view.cart-content view.goods-item navigator.goods-img {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.cart view.cart-content view.goods-item navigator.goods-img image {
  width: 80%;
}
view.cart view.cart-content view.goods-item view.goods-detail {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  flex: 5;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-price-wrap {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-price-wrap view.goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-price-wrap view.goods-num-tool {
  display: flex;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-price-wrap view.goods-num-tool view.num-edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ddd;
}
view.cart view.cart-content view.goods-item view.goods-detail view.goods-price-wrap view.goods-num-tool view.num-text {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.bottom-tools {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  border-top: 0.5px solid #aaa;
  width: 100%;
  display: flex;
  background-color: white;
}
view.bottom-tools view.allcheck-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
view.bottom-tools view.total-price-wrap {
  flex: 4;
}
view.bottom-tools view.order-pay-wrap {
  flex: 3;
}
